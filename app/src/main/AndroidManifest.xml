<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e3.mybills">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    BillActivity
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BillActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.mybill.MyBill" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemsActivity"
            android:label="@string/items" />
        <activity android:name=".ItemsAddEditActivity" />
        <activity
            android:name=".customersActivity"
            android:label="@string/customers" />
        <activity android:name=".CustomersAddEditActivity" />
        <activity
            android:name=".Start_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowBill_Info"
            android:label="@string/Show_Bill_Info" />
        <activity android:name=".BillAddEditActivity" />
        <activity android:name=".Pdf_View" />
        <activity android:name=".ShowCustBills"></activity>
    </application>

</manifest>