<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.e3.mybills.BillActivity"
    tools:showIn="@layout/app_bar_bill">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/header_width_code_Cost_price"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/number_bill"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/header_width_name"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/desc"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/header_width_code_Cost_price"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/customer_code"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/header_width_name"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/name"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/header_width_code_Cost_price"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/bill_tybe"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="@dimen/header_width_code_Cost_price"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/tootla"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="@dimen/header_width_code_Cost_price"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/disc"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="@dimen/header_width_code_Cost_price"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/NetTotal"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="@dimen/header_width_date"
                    android:layout_height="@dimen/header_height"
                    android:layout_weight="1"
                    android:background="@drawable/border_header"
                    android:text="@string/ad_date"
                    android:textAlignment="center"
                    android:textColor="@color/HeaderTextColor"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/listView_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>

