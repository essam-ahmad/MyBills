<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/number_bill"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/number_bill"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="@dimen/header_width_name"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/desc"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customer_code"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/customer_code"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_cust"
        android:layout_width="@dimen/header_width_name"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bill_tybe"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/bill_tybe"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/disc"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/disc"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Tootal"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/tootla"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="@dimen/header_width_date"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/ad_date"
        android:textAlignment="center"
        android:textStyle="bold" />
</LinearLayout>