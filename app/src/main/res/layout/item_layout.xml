<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/col_itm_code"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="@dimen/list_height"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/col_itm_name"
        android:layout_width="@dimen/header_width_name"
        android:layout_height="@dimen/list_height"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="ابراهيم احمد محمد البركاني"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/col_itm_cost"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="@dimen/list_height"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/col_itm_price"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="@dimen/list_height"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/col_ad_date"
        android:layout_width="@dimen/header_width_date"
        android:layout_height="@dimen/list_height"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>



