<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/col_itm_code"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_itm_name"
        android:layout_width="@dimen/header_width_name"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_itm_cost"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_itm_price"
        android:layout_width="@dimen/header_width_code_Cost_price"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_ad_date"
        android:layout_width="@dimen/header_width_date"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</LinearLayout>



