<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/col_c_code"
        android:layout_width="@dimen/width_customer_code"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_c_name"
        android:layout_width="@dimen/width_customer_name"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_phone"
        android:layout_width="@dimen/width_phone"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoLink="phone"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_address"
        android:layout_width="@dimen/width_address_name"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/col_ad_date"
        android:layout_width="@dimen/header_width_date"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</LinearLayout>



